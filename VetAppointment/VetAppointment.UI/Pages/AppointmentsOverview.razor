@page "/appointmentsoverview"

<style>
    th, td {
        vertical-align: middle;
        text-align: center
    }

    tbody > tr:hover > td {
        color: #000;
        background-color: #E2E3E5;
        border-color: #E2E3E5
    }
</style>

<h2 class="title-transition">AppointmentsOverview</h2>
@if (Appointments == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <tabel class="table table-light">
        <thead class="table-primary">
            <th>Appointment Id</th>
            <th>Appointment VetId</th>
            <th>Appointment PetId</th>
            <th>Appointment ScheduledDate</th>
            <th>Appointment EstimatedDurationInMinutes</th>
        </thead>
        <tbody>
            @foreach (var appointment in Appointments)
            {
                <tr>
                    <td>@appointment.Id</td>
                    <td>@appointment.VetId</td>
                    <td>@appointment.PetId</td>
                    <td>@appointment.ScheduledDate</td>
                    <td>@appointment.EstimatedDurationInMinutes</td>
                </tr>
            }
        </tbody>
    </tabel>
}
