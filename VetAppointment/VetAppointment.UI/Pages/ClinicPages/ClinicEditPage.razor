@page "/clinic/{ClinicId:guid}"

<style>

    th, td {
        vertical-align: middle;
        text-align: center
    }

    #inner {
        display: table;
        margin: 0 auto;
        margin-bottom: 50px;
    }

    .buttons {
        display: flex;
        align-items: center;
        height: 100%;
        justify-content: space-around;
    }

    .space-top {
        padding-top: 20px;
    }

    .label-space-top {
        padding-top: 10px;
    }

</style>

<PageTitle>Edit Clinic</PageTitle>
<h3>Edit Clinic</h3>

<table id="inner" class="table table-light">
    <thead class="table-primary">
        <tr>
            <th>Clinic ID</th>
            <th>Clinic Name</th>
            <th>Clinic Address</th>
            <th>Clinic NumberOfPlaces</th>
            <th>Clinic ContactEmail</th>
            <th>Clinic ContactPhone</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@ClinicId</td>
            <td>@ClinicOld.Name</td>
            <td>@ClinicOld.Address</td>
            <td>@ClinicOld.NumberOfPlaces</td>
            <td>@ClinicOld.ContactEmail</td>
            <td>@ClinicOld.ContactPhone</td>
        </tr>
    </tbody>
</table>

<EditForm class="container" Model="ClinicToUpdate" OnValidSubmit="UpdateClinic">
    <FluentValidationValidator />
    <div>
        <label for="name" class="label-space-top">Name</label>
        <InputText id="name" @bind-Value="ClinicToUpdate.Name" placeholder="Clinic Name" class="form-control" />
        <ValidationMessage For="@(() => ClinicToUpdate.Name)"></ValidationMessage>
    </div>
    <div class="form-group">
        <label for="address" class="label-space-top">Address</label>
        <InputText id="address" @bind-Value="ClinicToUpdate.Address" class="form-control" />
        <ValidationMessage For="@(() => ClinicToUpdate.Address)"></ValidationMessage>
    </div>
    <div class="form-group">
        <label for="places" class="label-space-top">Number of places</label>
        <InputNumber id="places" @bind-Value="ClinicToUpdate.NumberOfPlaces" class="form-control" />
        <ValidationMessage For="@(() => ClinicToUpdate.NumberOfPlaces)"></ValidationMessage>
    </div>
    <div class="form-group">
        <label for="email" class="label-space-top">Email</label>
        <InputText id="email" @bind-Value="ClinicToUpdate.ContactEmail" class="form-control" />
        <ValidationMessage For="@(() => ClinicToUpdate.ContactEmail)"></ValidationMessage>
    </div>
    <div class="form-group">
        <label for="phone" class="label-space-top">Phone number</label>
        <InputText id="phone" @bind-Value="ClinicToUpdate.ContactPhone" class="form-control" />
        <ValidationMessage For="@(() => ClinicToUpdate.ContactPhone)"></ValidationMessage>
    </div>
    <div class="row space-top">
        <div class="col">
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </div>
</EditForm>

<div class="row">
    <div class="col">
        <button type="button" class="btn btn-info" @onclick="NavigateBack">Cancel and back</button>
    </div>
</div>

<div class="space-top buttons">
    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-info" @onclick="NavigateToPets">Pets</button><br />
        </div>
    </div>

    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-info" @onclick="NavigateToVets">Vets</button><br />
        </div>
    </div>

    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-info" @onclick="NavigateToAppointments">Appointments</button><br />
        </div>
    </div>

    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-info" @onclick="NavigateToMedicalHistory">Medical History</button><br />
        </div>
    </div>
</div>
