@page "/clinicsoverview"

<style>
    th, td {
        vertical-align: middle;
        text-align: center
    }
</style>

<PageTitle>Clinic Overview</PageTitle>
<h1>Clinics Overview</h1>

<h3>All Clinics</h3>
@if (Clinics == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-light">
        <thead class="table-primary">
            <tr>
                <th>Clinic ID</th>
                <th>Clinic Name</th>
                <th>Clinic Address</th>
                <th>Clinic NumberOfPlaces</th>
                <th>Clinic ContactEmail</th>
                <th>Clinic ContactPhone</th>
                @*<th>Clinic RegistrationDate</th>
                <th>Clinic Vets</th>
            <th>Clinic Pets</th>
            <th>Clinic Owner</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var clinic in Clinics)
            {
                <tr>
                    <td>@clinic.Id</td>
                    <td>@clinic.Name</td>
                    <td>@clinic.Address</td>
                    <td>@clinic.NumberOfPlaces</td>
                    <td>@clinic.ContactEmail</td>
                    <td>@clinic.ContactPhone</td>
                    @*<td>@clinic.RegistrationDate</td>
                    <td>
            @foreach (var vet in clinic.Vets)
            {
            @("ID: " + vet.Id + "\n")
            }
            </td>
            <td>
            @foreach (var pet in clinic.Pets)
            {
            @("ID: " + pet.Id)

            <br />
            }
            </td>
            <td>
            @("Name: " + clinic.Owner.Name + "\nSurname" + clinic.Owner.Surname + "\nBirthdate" +
            clinic.Owner.Birthdate.ToString() + "\nGender" + clinic.Owner.Gender.ToString() + "\nEmail" +
            clinic.Owner.Email + "\nPhone" + clinic.Owner.Phone)
            </td>*@
                </tr>
            }
        </tbody>
    </table>
}

<h3>Add Clinic</h3>

<button type="button" class="btn btn-info float-right" @onclick="ShowCreate">Create</button>

@if (Clinic != null)
{
    <EditForm class="container" Model="Clinic" OnSubmit="Submit">
        <div>
            <label for="name">Name</label>
            <InputText id="name" @bind-Value="Clinic.Name" placeholder="Clinic Name" class="form-control" />
        </div>

        <div class="form-group">
            <label for="address">Address</label>
            <InputText id="address" @bind-Value="Clinic.Address" class="form-control" />
        </div>

        <div class="form-group">
            <label for="places">Number of places</label>
            <InputNumber id="places" @bind-Value="Clinic.NumberOfPlaces" class="form-control" />
        </div>

         <div class="form-group">
            <label for="email">Email</label>
            <InputText id="email" @bind-Value="Clinic.ContactEmail" class="form-control" />
        </div>

        <div class="form-group">
            <label for="phone">Phone number</label>
            <InputText id="phone" @bind-Value="Clinic.ContactPhone" class="form-control" />
        </div>

        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </div>
    </EditForm>
}