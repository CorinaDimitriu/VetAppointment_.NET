@page "/owner/{OwnerId:guid}/pets"

<PageTitle>Pets</PageTitle>

<style>
    th, td {
        vertical-align: middle;
        text-align: center
    }

    tbody > tr:hover > td {
        color: #000;
        background-color: #E2E3E5;
        border-color: #E2E3E5
    }

    #inner {
        display: table;
        margin: 0 auto;
        margin-bottom: 50px;
    }

    .space-top {
        padding-top: 20px;
    }

    .space-bottom {
        padding-bottom: 20px;
    }

    .label-space-top {
        padding-top: 10px;
    }

</style>

@if (PetsToGet == null)
{
    <p><em>Loading pets...</em></p>
}
else
{
    <tabel class="table table-light inner">
        <thead class="table-primary">
            <tr>
                <th>Pet Id</th>
                <th>Pet Name</th>
                <th>Pet Birthdate</th>
                <th>Pet Race</th>
                <th>Pet Gender</th>
                <th>Pet Appointments</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pet in PetsToGet)
            {
                <tr>
                    <td>@pet.Id</td>
                    <td>@pet.Name</td>
                    <td>@DateTime.Parse(pet.Birthdate).ToString("dd-MM-yyyy")</td>
                    <td>@pet.Race</td>
                    <td>@pet.Gender</td>
                    <td><button type="button" class="btn btn-info" @onclick="(() => NavigateToPetAppointmentsPage(pet.Id))">Appointments</button></td>
                </tr>
            }
        </tbody>
    </tabel>
}

<div class="row space-top space-bottom">
    <div class="col">
        <button type="button" class="btn btn-info" @onclick="NavigateBack">back</button>
    </div>
</div>