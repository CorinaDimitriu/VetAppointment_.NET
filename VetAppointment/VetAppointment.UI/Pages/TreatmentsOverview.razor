@page "/treatmentsoverview"

<style>
    th, td {
        vertical-align: middle;
        text-align: center
    }

    tbody > tr:hover > td {
        color: #000;
        background-color: #E2E3E5;
        border-color: #E2E3E5
    }
</style>

<h2 class="title-transition">Treatment Overview</h2>
@if (Treatments == null)
{
        <p><em>Loading...</em></p>
}
else
{
        <tabel class="table table-light">
            <thead class="table-primary">
            <th>Treatment Id</th>
            <th>Treatment Description</th>
            </thead>
            <tbody>
            @foreach (var treat in Treatments)
            {
                        <tr>
                            <td>@treat.Id</td>
                            <td>@treat.Description</td>
                        </tr>
            }
            </tbody>
        </tabel>
}
